

<h1>Low Stock Items</h1>

<% if (lowStockItems && lowStockItems.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>Item Name</th>
        <th>Current Stock</th>
        <th>Minimum Stock Level</th>
      </tr>
    </thead>
    <tbody>
      <% lowStockItems.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.currentStock %></td>
          <td><%= item.minimumStockLevel %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p>No low stock items found.</p>
<% } %>

